---
import FeatureList from "./FeatureList.astro";
---

<div class="full features">
  <h1>Modern Python, modern features</h1>

  <FeatureList />
</div>

<style>
  .features {
    padding: 40px 0;
    gap: 44px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h1 {
    font-family: var(--font-display);
    font-weight: 500;
    font-size: 46px;
    line-height: 1.2;
    max-width: 1100px;
    margin: 0 auto;
    text-wrap: balance;
    text-align: center;
  }

  :global(html.dark) h1 {
    color: var(--color-white);
  }

  h1 em {
    color: var(--color-strawberry);
    font-style: normal;
  }

  @media (min-width: 768px) {
    h1 {
      font-size: 60px;
    }
  }
</style>
