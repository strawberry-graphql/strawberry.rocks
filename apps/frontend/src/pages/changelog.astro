---
import Layout from "../layouts/Layout.astro";
import Markdown from "../components/Markdown.astro";
import { fetchDocPage } from "../utils/fetch-doc-page";

const { content } = await fetchDocPage({
  filename: "CHANGELOG.md",
});
---

<Layout title="Changelog" blob>
  <main>
    <article>
      <Markdown content={content} />
    </article>
  </main>
</Layout>

<style>
  main {
    padding: 80px 16px;
    display: flex;
    row-gap: 80px;
    flex-direction: column;
    justify-content: center;

    max-width: 1280px;
    margin: 0 auto;
  }

  main :is(h1, h2, h3, h4) {
    max-width: 800px;
    margin: 0 auto;
    text-wrap: balance;

    @media (max-width: 800px) {
      padding: 0 16px;
    }
  }

  main header h1 {
    margin-bottom: 40px;
  }

  ul {
    display: grid;
    gap: 40px;

    > li {
      height: 100%;
    }

    @media (min-width: 800px) {
      grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    }
  }

  :global(.card) {
    height: 100%;
  }
</style>
